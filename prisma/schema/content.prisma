model Organization {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())

  pageContent Page?

  @@map("organizations")
}

model Page {
  id             String   @id @default(cuid())
  organizationId String   @unique
  updatedAt      DateTime @updatedAt

  sections Json

  organization Organization @relation(fields: [organizationId], references: [id])

  @@map("pages")
}
